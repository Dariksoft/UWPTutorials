<Page x:Class="StackPanel_Layout_Control.BlankPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:StackPanel_Layout_Control"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock>First</TextBlock>
            <TextBlock>Second</TextBlock>
            <TextBlock>Third</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Fourth</TextBlock>
                <TextBlock>Fifth</TextBlock>
                <TextBlock>Sixth</TextBlock>
            </StackPanel>
        </StackPanel>
        <StackPanel Height="200" VerticalAlignment="Top">
            <Rectangle Height="100" Fill="Red" />
        </StackPanel>

    </Grid>
</Page>
